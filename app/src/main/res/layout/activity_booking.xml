<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BookingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бронирование"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/websiteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Посетить сайт"
            android:textColor="@color/purple_500"
            android:autoLink="web"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginBottom="24dp"/>

        <!-- Existing Booking Form -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Выберите дату"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Время"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/timeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Выберите время"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество гостей"
            android:layout_marginBottom="8dp"/>

        <NumberPicker
            android:id="@+id/guestsNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/bookButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Забронировать"
            android:layout_marginBottom="32dp"/>

        <!-- REVIEWS SECTION -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отзывы и Рейтинг"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/toggleReviewFormButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оставить отзыв"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:id="@+id/reviewFormLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="#f0f0f0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваша оценка:"
                android:layout_marginBottom="8dp"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/reviewCommentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Напишите комментарий..."
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/submitReviewButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Отправить"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviewsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

    </LinearLayout>
</ScrollView>